# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gesturevault
# For MongoDB Atlas (uncomment and replace with your connection string):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gesturevault

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
# For Redis Cloud (uncomment and replace):
# REDIS_URL=redis://username:password@host:port

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@gesturevault.com

# SMS Configuration (for 2FA)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AI/ML Configuration
TENSORFLOW_MODEL_PATH=./models/gesture_classifier
MEDIAPIPE_MODEL_PATH=./models/hand_landmarker.task
GESTURE_SIMILARITY_THRESHOLD=0.85
BIOMETRIC_ANALYSIS_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Feature Flags
ENABLE_VOICE_RECOGNITION=true
ENABLE_FACE_RECOGNITION=false
ENABLE_GAMIFICATION=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true

# API Keys (for external services)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
AZURE_COGNITIVE_SERVICES_KEY=your-azure-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key 